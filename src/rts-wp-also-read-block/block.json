{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "create-block/rts-wp-also-read-block",
	"version": "0.1.0",
	"title": "WP Also Read Block",
	"category": "widgets",
	"icon": "smiley",
	"description": "A block to display also read posts based on the search term",
	"example": {},
	"supports": {
		"html": false
	},
	"textdomain": "rts-wp-also-read-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"attributes": {
		"selectedPost": {
		"type": "object",
		"default": {}
		},
		"value":{
			"type":"string",
			"default": ""
		},
		"showInput":{
			"type":"boolean",
			"default": true
		},
		"editView":{
			"type":"boolean",
			"default" : false
		},
		"isLoading":{
			"type" :"boolean",
			"default" : false
		},
		"showNotFoundMsg":{
			"type": "boolean",
			"default": false
		},
		"blockTitle":{
			"type": "string",
			"default": "Also Read"
		},
        "textColor": {
          "type": "string",
		  "default": "#696969"
        },
		"fontSize": {
			"type": "string",
			"default": "18px" 
		},
		"postTitleTextColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"postTitleFontSize": {
			"type": "string",
			"default": "18px"
		},
		"postBgColor": {
			"type": "string",
			"default": "#06b7d3"
		},
		"allowGlobalOverride": {
			"type": "boolean",
			"default": true
		}
	},
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}
